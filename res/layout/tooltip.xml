<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooltip_llyGlobal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tooltip_imgUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/tooltip_view_arrow_up" />

    <LinearLayout
        android:id="@+id/tooltip_llyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tooltip_view_bg"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tooltip_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:textColor="#FFF"
            android:textSize="@dimen/tooltip_title_font_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tooltip_txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="#FFF"
            android:textSize="@dimen/tooltip_message_font_size"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tooltip_imgDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/tooltip_view_arrow_down" />

</LinearLayout>